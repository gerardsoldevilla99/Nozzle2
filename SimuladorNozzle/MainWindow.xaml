<Window x:Class="SimuladorNozzle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimuladorNozzle" 
        xmlns:chart="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="680" Width="1230">
    <Grid Background="DarkSalmon" Margin="0,0,0,0">
        <TabControl Name="Pestañas" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top">
            <TabItem Name="SimulatorTab" Header="Simulator" Height="22" VerticalAlignment="Top">
                <Grid Height="600" Width="1200" Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="500"></ColumnDefinition>
                        <ColumnDefinition ></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition ></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel x:Name="PanelCol1" Margin="5,5,5,5" Grid.Column="0" Background="#FFE5E5E5">
                        <StackPanel x:Name="PanelInitialSettings0" Margin="5,10,5,0" Height="50" Background="DarkSalmon" Opacity="1.0">
                            <Label x:Name="InitialSettingsTitleLabel" Content="INITIAL SETTINGS" FontFamily="Tahoma" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" />
                        </StackPanel>
                        <StackPanel x:Name="PanelInitialSettings1" Margin="5,0,5,0" Height="300" Opacity="1.0">
                            <StackPanel.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="DarkSalmon" Offset="0"/>
                                    <GradientStop Color="#FFE5E5E5" Offset="1"/>
                                </LinearGradientBrush>
                            </StackPanel.Background>
                            <Grid Width="180" Height="100" Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition ></RowDefinition>
                                    <RowDefinition ></RowDefinition>
                                </Grid.RowDefinitions>
                                <Label Content="DIVISIONS:" Margin="0,10,5,0" Opacity="1.0" FontWeight="Bold" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right"/>
                                <TextBox x:Name="DivisionsTextBox" Margin="0,10,5,0" Height="30" Width="75" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="0" VerticalAlignment="Top" TextAlignment="Center" FontSize="14"/>
                                <Label Content="C:" Margin="0,10,5,0" FontWeight="Bold" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right"/>
                                <TextBox x:Name="CourantTextBox" Margin="0,10,5,0" Height="30" Width="75" HorizontalAlignment="Right"  Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" TextAlignment="Center" FontSize="14" />
                            </Grid>
                            <Button x:Name="DefaultValuesButton" Margin="0,10,5,0" Height="30" Width="120" HorizontalAlignment="Right" Content="Default Values" Background="#FFB4B4B4" Click="DefaultValuesButton_Click" FontWeight="Bold" />
                            <Button x:Name="CreateButton" Margin="0,25,0,0" Height="40" Width="150" Content="CREATE!" FontSize="20" FontWeight="Bold" BorderThickness="0" Background="DarkSalmon" Click="CreateButton_Click" >
                                <Button.Effect>
                                    <DropShadowEffect/>
                                </Button.Effect>

                            </Button>

                        </StackPanel>
                    </StackPanel>
                    <StackPanel x:Name="PanelCol2" Margin="5,5,5,5" Grid.Column="1">
                        <StackPanel x:Name="PanelSim" Height="450" Margin="0,0,0,0" Background="#FFCBCACA">
                            <Grid Width="480" Height="440" Margin="5,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="450"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <ComboBox x:Name="PropertiesBoxSelection" Margin="0,0,5,0" Grid.Column="0" Grid.Row="0" FontSize="14" FontWeight="Bold" SelectionChanged="PropertiesBoxSelection_SelectionChanged" />
                                <Grid x:Name="Indicator" Grid.Column="1" Grid.Row="1" Width="50" Height="410">
                                    <Grid.RowDefinitions></Grid.RowDefinitions>

                                </Grid>
                                <StackPanel x:Name="NozzlePanel" Margin="0,5,5,5" Grid.Column="0" Grid.Row="1" Background="White">

                                    <Canvas x:Name="NozzleCanvas" Width="445" Height="400"></Canvas>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                        <StackPanel x:Name="PanelControls" Margin="0,20,0,5" Height="120" Background="#FFE5E5E5">
                            <Grid Width="480" Height="120" Margin="5,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="NextStepButton" Height="60" Width="60" Content="Next" Background="#FF8B8B8B" Grid.Column="0"/>
                                <Button x:Name="AutoButton" Height="60" Width="60" Content="Auto" Background="#FF8B8B8B" Grid.Column="1"/>
                                <Button x:Name="PauseButton" Height="60" Width="60" Content="Pause" Background="#FF8B8B8B" Grid.Column="2"/>
                                <Button x:Name="RestartButton" Height="60" Width="60" Content="Restart" Background="#FF8B8B8B" Grid.Column="3"/>
                                <Button x:Name="DownloadButton" Height="60" Width="60" Content="Download" Background="#FF8B8B8B" Grid.Column="4"/>
                                <Button x:Name="UploadButton" Height="60" Width="60" Content="Upload" Background="#FF8B8B8B" Grid.Column="5"/>
                            </Grid>
                        </StackPanel>


                    </StackPanel>




                    <StackPanel x:Name="PanelCol3" Margin="5,5,5,5" Grid.Column="2" Background="#FFE5E5E5">
                        <Grid Margin="5,5,0,5" Height="50" Width="200" >
                            <Grid.RowDefinitions>
                                <RowDefinition ></RowDefinition>
                                <RowDefinition ></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="buttChart0" Grid.Row="0" Grid.Column="0" Content="x = 0" Background="#FFE8E8E8" Margin="1,1,1.4,0" Click="buttChart0_Click" Height="23" VerticalAlignment="Top"></Button>
                            <!--possible color of activated #FF999090-->
                            <Button x:Name="buttChart1" Grid.Row="0" Grid.Column="1" Content="x = 1" Background="#FFE8E8E8" Margin="1,1,1,1" Click="buttChart1_Click"></Button>
                            <Button x:Name="buttChart2" Grid.Row="0" Grid.Column="2" Content="x = 2" Background="#FFE8E8E8" Margin="1,1,1,1" Click="buttChart2_Click"></Button>
                            <Button x:Name="buttChart3" Grid.Row="0" Grid.Column="3" Content="x = 3" Background="#FFE8E8E8" Margin="1,1,1,1" Click="buttChart3_Click"></Button>
                        </Grid>
                        <Grid Margin="5,5,5,5" Height="350" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition ></RowDefinition>
                                <RowDefinition Height="50"></RowDefinition>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="5,5,5,5">
                                <Label Content="Density" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="12"></Label>
                                <chart:CartesianChart x:Name="chartD" Height="140" Background="White" Series="{Binding SeriesCollection}" >

                                    <!--<chart:CartesianChart.Content>
                                        <TextBlock HorizontalAlignment="Center" FontSize="12" Margin="0,5,0,5">Average phase progresion</TextBlock>
                                    </chart:CartesianChart.Content>
                                    <chart:CartesianChart.AxisY>
                                        <chart:Axis x:Name="YAxisP" MaxValue="1.1" MinValue="0.7" LabelFormatter="{Binding YFormatter}"  />
                                    </chart:CartesianChart.AxisY>
                                    <chart:CartesianChart.AxisX>
                                        <chart:Axis x:Name="XAxisP"  Labels="{Binding timeChart}"  />
                                    </chart:CartesianChart.AxisX>-->

                                </chart:CartesianChart>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="5,5,5,5">
                                <Label Content="Velocity" HorizontalAlignment="Center" VerticalAlignment="Top"  FontSize="12"></Label>
                                <!--<lvc:CartesianChart Background="White" Height="140" >
                                    <lvc:CartesianChart.Series>
                                        <lvc:LineSeries Values="{Binding Values1}" StrokeThickness="2" StrokeDashArray="3" Stroke="#6BBA45" Fill="Transparent" LineSmoothness="0" PointGeometrySize="10"  />
                                        <lvc:LineSeries Values="{Binding Values2}" StrokeThickness="2" StrokeDashArray="3" Stroke="#1C8FC5" Fill="Transparent" LineSmoothness="0" PointGeometrySize="10" /> 
                                        -->
                                <!--PointForeround="#222E31"-->
                                <!--
                                    </lvc:CartesianChart.Series>
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis IsMerged="True">
                                            <lvc:Axis.Separator>
                                                <lvc:Separator StrokeThickness="1" StrokeDashArray="2">
                                                    <lvc:Separator.Stroke>
                                                        <SolidColorBrush Color="#404F56" />
                                                    </lvc:Separator.Stroke>
                                                </lvc:Separator>
                                            </lvc:Axis.Separator>
                                        </lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis IsMerged="True">
                                            <lvc:Axis.Separator>
                                                <lvc:Separator StrokeThickness="1.5" StrokeDashArray="4">
                                                    <lvc:Separator.Stroke>
                                                        <SolidColorBrush Color="#404F56" />
                                                    </lvc:Separator.Stroke>
                                                </lvc:Separator>
                                            </lvc:Axis.Separator>
                                        </lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>-->

                                <lvc:CartesianChart Series="{Binding SeriesV}" LegendLocation="None"  Height="251" Margin="0,0,0.6,0" >

                                    <!--https://lvcharts.net/App/examples/v1/wpf/Basic%20Line%20Chart-->
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis Title="Velocity ( m / s )" ></lvc:Axis>
                                        <!--LabelFormatter="{Binding YFormatter}"-->
                                    </lvc:CartesianChart.AxisY>
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Title="Time ( seconds )" Labels="{Binding Labels}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                </lvc:CartesianChart>



                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="5,5,5,5">
                                <Label Content="Temperature" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="12"></Label>
                                <chart:CartesianChart x:Name="chartT" Height="140" Background= "White" Series="{Binding casillasP}" >

                                </chart:CartesianChart>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="5,5,5,5">
                                <Label Content="Pressure" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="12"></Label>
                                <chart:CartesianChart x:Name="chartP" Height="140" Background="White" Series="{Binding casillasP}" >

                                </chart:CartesianChart>
                            </StackPanel>
                        </Grid>
                    </StackPanel>



                </Grid>
            </TabItem>
            <TabItem Name="PDFTab" Header="PDF">
                <Grid Background="#FFE5E5E5" Height="375" Width="775"  Margin="0,0,0,0"/>
            </TabItem>
            <TabItem Name="AndersonTab" Header="Anderson Tables">
                <Grid Background="#FFE5E5E5" Height="375" Width="775"  Margin="0,0,0,0"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>